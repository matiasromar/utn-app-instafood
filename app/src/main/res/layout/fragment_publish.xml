<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.utnapp.instafood.Fragments.PublishFragment">

    <RelativeLayout
        android:id="@+id/imageContainar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/selectImageContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/fab_margin"
            android:elevation="2dp"
            android:gravity="center">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_camera_alt_black_24dp"
                android:backgroundTint="@color/colorAccent"
                android:onClick="capturePicture"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_image_black_24dp"
                android:backgroundTint="@color/colorAccent"
                android:onClick="selectFromGallery"
                />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/imageSelectedContainer"
            android:layout_margin="@dimen/fab_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <ImageView
                android:id="@+id/selectedImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"
                android:src="@drawable/ic_image_black_24dp"/>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_create_black_24dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:onClick="editPicture"/>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/cancel_edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_clear_black_24dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:onClick="cancelEditPicture"
                android:visibility="gone"/>
        </RelativeLayout>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/fab_margin"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:hint="@string/description_placeholder"
            android:height="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp" />
        <ImageButton
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_send_black_24dp"
            android:backgroundTint="@color/colorAccent"
            android:onClick="publish"
            />
    </FrameLayout>

</RelativeLayout>
